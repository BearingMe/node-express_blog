doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css")
    link(rel="stylesheet" href="css/main.css")
    if (title)
      title Express Machine - #{title}
    else
      title Express Machine
  body
    header.site-header
      nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
        div.container
          a.navbar-brand.mr-4(href='/') Express Machine 
          button.navbar-toggler(
            type='button' 
            data-toggle='collapse' 
            data-target='#navbarToggle' 
            aria-controls='navbarToggle' 
            aria-expanded='false' 
            aria-label='Toggle navigation'
          )
            span.navbar-toggler-icon
          div#navbarToggle.collapse.navbar-collapse
            div.navbar-nav.mr-auto
              a.nav-item.nav-link(href='/') Home
              a.nav-item.nav-link(href='/about') Sobre
            div.navbar-nav
              a.nav-item.nav-link(href='/login') Login
              a.nav-item.nav-link(href='/register') Registrar

    main.container(role='main')
      div.row
        div.col-md-8
          block content
        div.col-md-4
          div.content-section
            h3 Sidebar
              ul.list-group
                li.list-group-item.list-group-item-light Postagens Recentes
                li.list-group-item.list-group-item-light Not√≠cias
                li.list-group-item.list-group-item-light Eventos
                li.list-group-item.list-group-item-light Outros

    script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous")